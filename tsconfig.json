{
    "compilerOptions": {
        "target": "ES2022",
        "module": "NodeNext",
        "moduleResolution": "NodeNext",
        "outDir": "dist",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "declaration": true,
        "noImplicitAny": true
    },
    "include": ["src/**/*.ts", "src/main/main-adapter.ts"],
    "exclude": ["**/_*.ts"]
}
