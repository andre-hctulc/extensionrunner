{
    "compilerOptions": {
        "target": "es2020",
        "module": "es2020",
        "lib": ["webworker", "dom"],
        "strict": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "outDir": ".",
        "declaration": true,
        "removeComments": true
    },
    "include": ["src/worker.ts", "src/Adapter.ts", "src/shared.ts"],
    "exclude": ["node_modules"]
}
